---
import Layout from "../layouts/Layout.astro";
import FeaturedProducts from "../components/shopify/FeaturedProducts.astro";
---

<Layout title="Simplified Shopify Products">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-8">Shopify Products</h1>

    <!-- Shopify Products Section -->
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold mb-4">Featured Products</h2>
      <p class="text-gray-700 mb-4">Products from Shopify Storefront API</p>
      <FeaturedProducts />
    </div>
  </main>
</Layout>
